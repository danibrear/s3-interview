{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Start Application",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-wait", "index.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Current File",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-wait", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Server",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect-wait", "server.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    }
  ]
}
